<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.splash.SplashActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_green"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_baseline_library_music_24"
        app:layout_constraintBottom_toTopOf="@+id/txtVersionDetails"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtVersionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_min_0_sec"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="@dimen/font_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/di_50"
        />
</androidx.constraintlayout.widget.ConstraintLayout>